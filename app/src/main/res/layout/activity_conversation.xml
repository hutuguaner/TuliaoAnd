<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".activity.ConversationActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@android:color/white"
        android:elevation="@dimen/dp_4">

        <RelativeLayout
            android:id="@+id/rl_conversation_back"
            android:layout_width="@dimen/dp_42"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_18"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_arrow_left" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_conversation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/txtblack"
            android:textSize="@dimen/sp_17" />

    </RelativeLayout>

    <com.stfalcon.chatkit.messages.MessagesList
        android:id="@+id/ml_conversation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="@dimen/dp_4">

        <ImageView
            android:id="@+id/iv_conversation_paperairplane"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/ic_paperairplane" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/iv_conversation_paperairplane"
            android:background="@mipmap/ic_kuang_gray_s">

            <EditText
                android:id="@+id/et_conversation_broad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@null"
                android:hint="输入内容"
                android:textColor="@color/gray_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>