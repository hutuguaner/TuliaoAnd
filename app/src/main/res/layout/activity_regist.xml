<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_text"
    tools:context=".activity.RegistActivity">

    <ImageView
        android:id="@+id/iv_regist_back"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_18_5"
        android:layout_marginLeft="@dimen/dp_15_5"
        android:layout_marginTop="@dimen/dp_33"
        android:src="@mipmap/ic_arrow_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30_5"
        android:layout_marginTop="@dimen/dp_81_5"
        android:text="注册"
        android:textColor="@color/regist"
        android:textSize="@dimen/sp_32" />


    <RelativeLayout
        android:layout_width="@dimen/dp_314_5"
        android:layout_height="@dimen/dp_54"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_152"
        android:background="@mipmap/ic_kuang_gray">

        <EditText
            android:id="@+id/et_regist_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginRight="@dimen/dp_31"
            android:background="@null"
            android:hint="邮箱"
            android:inputType="textEmailAddress"
            android:textColor="@color/txtblack"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_314_5"
        android:layout_height="@dimen/dp_54"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_215"
        android:background="@mipmap/ic_kuang_gray">

        <EditText
            android:id="@+id/et_regist_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/iv_regist_line_vertical"
            android:background="@null"
            android:hint="验证码"
            android:textColor="@color/txtblack"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/iv_regist_line_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_regist_getcode"
            android:src="@mipmap/ic_line_vertical" />

        <TextView
            android:id="@+id/tv_regist_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_28"
            android:text="获取验证码"
            android:textColor="@color/login"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_314_5"
        android:layout_height="@dimen/dp_54"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_281"
        android:background="@mipmap/ic_kuang_gray">

        <EditText
            android:id="@+id/et_regist_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginRight="@dimen/dp_31"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@color/txtblack"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="@dimen/dp_314_5"
        android:layout_height="@dimen/dp_54"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_347"
        android:background="@mipmap/ic_kuang_gray">

        <EditText
            android:id="@+id/et_regist_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginRight="@dimen/dp_31"
            android:background="@null"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textColor="@color/txtblack"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_regist_ok"
        android:layout_width="@dimen/dp_314_5"
        android:layout_height="@dimen/dp_54"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_425_5"
        android:background="@mipmap/ic_kuang_yellow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认"
            android:textColor="@color/login"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>


</RelativeLayout>