<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_82_5"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_128_5"
        android:text="欢迎来到涂料APP"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_17" />

    <ImageView
        android:id="@+id/iv_login_close"
        android:layout_width="@dimen/dp_19"
        android:layout_height="@dimen/dp_19"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_45_5"
        android:layout_marginRight="@dimen/dp_17"
        android:src="@mipmap/ic_cha" />


    <RelativeLayout
        android:layout_width="@dimen/dp_315"
        android:layout_height="@dimen/dp_54_5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_191"
        android:background="@mipmap/ic_kuang_gray">

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_18_5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_21"
            android:src="@mipmap/ic_phone" />

        <EditText
            android:id="@+id/et_login_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_21"
            android:background="@null"
            android:hint="手机号"
            android:inputType="phone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_315"
        android:layout_height="@dimen/dp_54_5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_255"
        android:background="@mipmap/ic_kuang_gray">

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_18_5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_21"
            android:src="@mipmap/ic_lock" />

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_21"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>


    <Button
        android:id="@+id/bt_login_login"
        android:layout_width="@dimen/dp_315"
        android:layout_height="@dimen/dp_54_5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_329_5"
        android:background="@mipmap/ic_kuang_yellow"
        android:text="登录"
        android:textColor="@color/login"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:id="@+id/tv_login_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_33_5"
        android:layout_marginTop="@dimen/dp_405"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_login_resetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_405"
        android:layout_marginRight="@dimen/dp_31"
        android:text="密码重置"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />


</RelativeLayout>