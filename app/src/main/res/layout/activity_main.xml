<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <org.osmdroid.views.MapView
        android:id="@+id/mv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_main_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_main_paperairplane"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/ic_paperairplane" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/iv_main_paperairplane"
            android:background="@mipmap/ic_kuang_gray_s">

            <EditText
                android:id="@+id/et_main_broad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@null"
                android:hint="广播内容"
                android:textColor="@color/gray_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

    </RelativeLayout>

    <!---->
    <ImageView
        android:id="@+id/iv_main_twobubble"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_above="@+id/rl_main_input"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_5"
        android:src="@mipmap/ic_twobubble" />

    <!---->
    <ImageView
        android:id="@+id/iv_main_locate"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_above="@+id/rl_main_input"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_5"
        android:src="@mipmap/ic_locate" />




</RelativeLayout>